<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE testproblem SYSTEM "regressiontest.dtd">

<testproblem>
  <name>random_walk_rng</name>
  <owner userid="mlange"/>
  <tags>flml random_walk</tags>
  <problem_definition length="medium" nprocs="1">
    <command_line>
../../bin/fluidity -v2 -l -p random_walk.flml
    </command_line>
  </problem_definition>
  <variables>

    <variable name="final_variance_fortran" language="python">
from detector_variance import get_detector_variance
final_variance_fortran = get_detector_variance("Fortran_Naive.detectors", 4000, 1000)[-1]
    </variable>

    <variable name="final_variance_python" language="python">
from detector_variance import get_detector_variance
final_variance_python = get_detector_variance("Python_Naive.detectors", 4000, 1000)[-1]
    </variable>
  </variables>
  <pass_tests>
    <test name="final_variance_fortran" language="python">
assert (final_variance_fortran - 348.240453183) &lt; 1e-12
assert (final_variance_fortran - 318.426213333) &gt; -1e-12
    </test>
    <test name="final_variance_python" language="python">
assert (final_variance_python - 348.240453183) &lt; 1e-12
assert (final_variance_python - 318.426213333) &gt; -1e-12
    </test>
  </pass_tests>
  <warn_tests>
  </warn_tests>
</testproblem>
