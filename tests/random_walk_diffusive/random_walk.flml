        <value name="WholeMesh">
          <python>
            <string_value lines="20" type="python">from math import pow

global visser_curve, get_spline, read_physics_file

time = 0.0
spline = None

def get_spline(t):
  from numpy import arange
  from scipy import interpolate
  
  # create spline
  height = arange(0.0, 60.0, 0.25)
  mu = [visser_curve(z) for z in height]
  tck = interpolate.splrep(height,mu)#, s=0.0001)
  return tck
  
def visser_curve(z):
  ## Recreate Fig. 1 in Visser, 1997, by using Fig. 3 in Ross and Sharples, 2004
  z = abs(z)
  if z &lt;= 40.:
    z = 40. - z
    K_z = 0.001 + 0.0136245 * z - 0.00263245 * pow(z,2) + 0.000211875 * pow(z,3) - 0.00000865898 * pow(z,4) + 0.00000017623 * pow(z,5) - 0.00000000140918 * pow(z,6)
  else:
    K_z=1e-6
  return K_z
  
def val(X, t):
  from scipy import interpolate
  global time, spline
  if t &gt; time or spline==None:
    time = t
    spline = get_spline(t)
  mu = interpolate.splev(abs(X[0]), spline)
  return mu</string_value>
          </python>
