<?xml version="1.0" encoding="UTF-8" ?>

<testproblem>
  <name>bdm1_fsphere</name>
  <owner userid="jemma"/>
  <tags>swml mimetic bdm1 sphere fsphere</tags>
  <problem_definition length="special" nprocs="1">
    <command_line>shallow_water_mimetic -v 3 sw_fsphere.swml &amp;&gt; sw.log</command_line>
    <!-- shallow water test case on a f-sphere-->
  </problem_definition>
  <variables>
    <variable name="maxdiffs" language="python">
from vtktools import VtuDiff, vtu
vtu1=vtu('fsphere_0.vtu')
vtu2=vtu('fsphere_1.vtu')
diff=VtuDiff(vtu1,vtu2)
dh=diff.GetField('LayerThickness')
maxdh=max(abs(dh.min()),abs(dh.max()))
maxdiffs=[maxdu,maxdh]
    </variable>
  </variables>
  <pass_tests>
    <test name="Nothing happens" language="python">
assert maxdh &lt; 1e-10
assert maxdu &lt; 1e-10
    </test>
  </pass_tests>
  <warn_tests>
  </warn_tests>
</testproblem>
